<p id="notice"><%= notice %></p>

  <h1><%= @student.name %></h1>

<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <strong>Teacher:</strong>
  <%= @student.teacher.name %>
</p>


  <div id="student">
    <table>

      <thead>
        <tr>
          <th>Name</th>
          <th>Details</th>
          <th>Date</th>
          <th>Grade</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @student.grades.each do |g| %>
          <tr id="grades">
            <td><%= g.name %></td>
            <td><%= g.details %></td>
            <td><%= g.date %></td>
            <td><%= g.grade %></td>
            <td><%= link_to 'Edit', edit_grade_path(g.id) %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
      <%= link_to 'Add grade', new_grade_path() %>
  </div>
<br/>
<%= link_to 'Edit', edit_student_path(@student) %>
<% if session[:user_type] == "Teacher" %>
  <%= link_to 'Back to Dashboard', teachers_path %>
<% elsif session[:user_type] == "Parent" %>
  <%= link_to 'Back to Dashboard', parents_path %>
<% elsif session[:user_type] == "Student" %>
  <%= link_to 'Back to Dashboard', students_path %>
<% end %>
