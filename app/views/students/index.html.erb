
<%= link_to 'LOGOUT', logout_path, method: :delete %>
<% @students.each do |s| %>
  <div id="student">
    <h1><%= s.name %></h1>
    <%= link_to 'Add grade', new_grade_path() %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Details</th>
          <th>Student ID</th>
          <th>Date</th>
          <th>Grade</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% s.grades.each do |g| %>
          <tr id="grades">
            <td><%= g.name %></td>
            <td><%= g.details %></td>
            <td><%= g.student_id %></td>
            <td><%= g.date %></td>
            <td><%= g.grade %></td>
            <td><%= link_to 'Edit', edit_grade_path(g.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if session[:user_type] == "Teacher" %>
    <%= link_to 'Back to Teachers', teachers_path %>
  <% end %>
<% end %>
