<% @teachers.each do |t| %>
  <div id="teacher">
    <h1><%= t.name %></h1>
    <%= link_to 'Add teacher', new_teacher_path() %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>E-mail</th>
          <th>Grade</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% t.students.each do |s| %>
          <tr id="student">
            <td><%= s.name %></td>
            <td><%= s.email %></td>
            <td><%= link_to 'See grades', student_path(s.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
