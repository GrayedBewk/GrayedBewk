<%= link_to 'LOGOUT', logout_path, method: :delete %>
<h1>Viewing Teachers</h1>
<% @teachers.each do |t| %>
  <div id="teacher">
    <h3><%= t.name %></h3>
    <%= link_to 'Edit Teacher', edit_teacher_path(t.id) %>
    <table>
      <thead>
        <tr>
         <th>Name</th>
         <th>E-mail</th>
         <th colspan=3>Options</th>
        </tr>
      </thead>
      <tbody>
        <% t.students.each do |s| %>
          <tr id="student">
            <td><%= s.name %></td>
            <td><%= s.email %></td>
            <td><%= link_to 'See grades', student_path(s.id) %> |
                <%= link_to 'Edit Student', edit_student_path(s.id) %> |
                <%= link_to 'Destroy', student_path(s.id), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<ul>
<li><%= link_to 'Add teacher', new_teacher_path() %></li>
<li><%= link_to 'Add parent', new_parent_path() %></li>
<li><%= link_to 'Add student', new_student_path() %></li>
</ul>
